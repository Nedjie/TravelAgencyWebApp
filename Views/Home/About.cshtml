@model List<TravelAgencyWebApp.Data.Models.Review>
@{
	ViewData["Title"] = "За Нас";
}
<!DOCTYPE html>
<html lang="bg">
<head>
	<title>За нас</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Travelix Project">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="~/Content/styles/bootstrap4/bootstrap.min.css" asp-append-version="true" />
	<link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/styles/main_styles.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/styles/responsive.css" asp-append-version="true" />
</head>
<body>
	<div class="home">
		<div class="row mb-3">
			<div class="col-md-12">
				<img src="~/Content/images/about_background.jpg" alt="Нашите Оферти" class="img-fluid" style="max-width: 100%; height: auto;" />
			</div>
		</div>
	</div>
	<div class="super_container">
		<!-- Header -->
		<header class="header">
			<div class="top_bar">
				<div class="container">
					<div class="row">
						<div class="col d-flex flex-row">
							<div class="phone">+359 345 3324</div>
							<div class="user_box ml-auto">
								<a asp-area="Identity" asp-page="/Account/Login">Вход</a>
								<a asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Main Navigation -->
			<nav class="main_nav">
				<div class="container">
					<div class="row">
						<div class="col main_nav_col d-flex flex-row align-items-center justify-content-start">
							<div class="logo_container">
								<div class="logo"><a href="#"><img src="~/Content/images/logo.png" alt="" />Дени Травел</a></div>
							</div>
							<div class="main_nav_container ml-auto">
								<ul class="main_nav_list">
									<li class="main_nav_item"><a asp-controller="Home" asp-action="Index">Начало</a></li>
									<li class="main_nav_item"><a asp-controller="Offer" asp-action="Index">Оферти</a></li>
									<li class="main_nav_item"><a asp-controller="Home" asp-action="About">За Нас</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</nav>
		</header>

		<!-- About Section -->
		<div class="container mt-5">
			<h2 class="text-center">Нашата История</h2>
			<p class="text-center">
				Добре дошли в Дени Травел! Ние сме вашият надежден партньор в пътуванията.
				С години опит на пазара, ние предлагаме уникални и незабравими преживявания за всеки клиент.
			</p>

			<h3 class="mt-4">Нашата Мисия</h3>
			<p>
				Наша цел е да предоставим висококачествени туристически услуги,
				гарантирайки удобство, безопасност и удовлетворение на нашите клиенти.
			</p>

			<h3 class="mt-4">Нашият Екип</h3>
			<div class="row">
				<div class="col-md-4 text-center">
					<div class="team-member">
						<img src="~/Content/images/member1.jpg" class="img-fluid rounded-circle" alt="Team Member" />
						<h5>Иван Иванов</h5>
						<p>Туристически Консултант</p>
						<p>С опит над 10 години в индустрията, Иван е вашият идеален партньор за планиране на приключения.</p>
					</div>
				</div>
				<div class="col-md-4 text-center">
					<div class="team-member">
						<img src="~/Content/images/member2.jpg" class="img-fluid rounded-circle" alt="Team Member" />
						<h5>Мария Петрова</h5>
						<p>Мениджър по Продажбите</p>
						<p>Мария е специалист в проектирането на идеални пакети, комбиниращи комфорт и приключение.</p>
					</div>
				</div>
				<div class="col-md-4 text-center">
					<div class="team-member">
						<img src="~/Content/images/member3.webp" class="img-fluid rounded-circle" alt="Team Member" />
						<h5>Георги Георгиев</h5>
						<p>Финансов Консултант</p>
						<p>С дългогодишен опит в финансовото планиране, Георги помага на клиентите да правят разумни инвестиции.</p>
					</div>
				</div>
			</div>

			<h3 class="mt-4">Отзиви от клиенти</h3>
			<div class="testimonials">
				@if (Model != null && Model.Any())
				{
					foreach (var review in Model)
					{
						<div class="testimonial-item mb-4">
							<h5>@review.User?.UserName</h5> <!-- Display reviewer's username -->
							<p>"@review.ReviewText"</p> <!-- Display review text -->
							<p><strong>Рейтинг: @review.Rating звезди</strong></p> <!-- Display review rating -->
							<p><small>На дата: @review.CreatedAt.ToString("dd.MM.yyyy")</small></p> <!-- Display review date -->
						</div>
					}
				}
				else
				{
					<p class="text-center">Няма отзиви за показване.</p>
				}
			</div>

		</div>
</div>
		<!-- Include jQuery and Bootstrap scripts -->
		<script src="~/Content/plugins/jquery/jquery.min.js" asp-append-version="true"></script>
		<script src="~/Content/styles/bootstrap4/bootstrap.bundle.min.js" asp-append-version="true"></script>

</body>
</html>
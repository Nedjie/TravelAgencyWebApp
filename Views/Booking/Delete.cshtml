@model TravelAgencyWebApp.ViewModels.Booking.ConfirmDeleteViewModel

@{
	ViewData["Title"] = "Изтриване на Резервация";
}
<head>
	<link rel="stylesheet" type="text/css" href="~/Content/styles/booking_delete.css" asp-append-version="true" />
</head>
<div class="container mt-5">
	<div class="confirm-delete-container">
		<h4>Сигурни ли сте, че искате да изтриете следната резервация?</h4>
		<div>
			<h5>Идентификатор на Резервацията: <strong>@Model.Id</strong></h5>
			<p><strong>Оферта:</strong> @Model.OfferTitle</p>
		</div>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<button type="submit" class="btn btn-danger">Изтрий</button>
			<a asp-action="Index" class="btn btn-secondary">Отказ</a>
		</form>
	</div>
</div>
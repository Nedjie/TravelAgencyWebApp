@model TravelAgencyWebApp.ViewModels.Offer.OfferViewModel

@{
	ViewData["Title"] = "Редактиране на Оферта";
}
<head>
	<title>Дени Травел</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Travelix Project">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="~/Content/styles/bootstrap4/bootstrap.min.css" asp-append-version="true" />
	<link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/styles/main_styles.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/Content/styles/responsive.css" asp-append-version="true" />
</head>
<body>
	<div class="container mt-5">
		<h2 class="text-center mb-4">Редактиране на Оферта</h2>

		<form asp-action="Edit">
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="Title" class="control-label">Заглавие</label>
				<input asp-for="Title" class="form-control" required placeholder="Въведете заглавието на офертата" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="control-label">Описание</label>
				<textarea asp-for="Description" class="form-control" required placeholder="Дайте подробно описание на офертата"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Price" class="control-label">Цена</label>
				<input asp-for="Price" class="form-control" type="number" step="0.01" required placeholder="Въведете цената на офертата" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="TravelingWayMethod" class="control-label">Метод на пътуване</label>
				<select asp-for="TravelingWayMethod" class="form-control" asp-items="@(new SelectList(ViewBag.TravelingWays, "Value", "Text"))">
					<option value="">Изберете метод на пътуване</option> <!-- Placeholder -->
				</select>
				<span asp-validation-for="TravelingWayMethod" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ImageUrl" class="control-label">URL на изображение (по желание)</label>
				<input asp-for="ImageUrl" class="form-control" placeholder="Въведете URL на изображение" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-success mx-2">Запази Промените</button>
				<a asp-action="Index" class="btn btn-secondary mx-2">Отказ</a>
			</div>
		</form>
	</div>

	<!-- Include validation scripts -->
	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}
	}
</body>
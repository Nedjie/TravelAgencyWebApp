@model TravelAgencyWebApp.ViewModels.Offer.ReviewViewModel

@{
    ViewData["Title"] = "Редактиране на Отзив"; 
}

<h1>Редактиране на Отзив</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="UserId">Потребител</label>
        <input asp-for="UserId" class="form-control" readonly /> <!-- Read-only to prevent changes -->
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OfferId">Оферта</label>
        <input asp-for="OfferId" class="form-control" readonly /> <!-- Read-only to prevent changes -->
        <span asp-validation-for="OfferId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReviewText">Текст на отзива</label>
        <textarea asp-for="ReviewText" class="form-control"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Оценка (1-5)</label>
        <input asp-for="Rating" type="number" min="1" max="5" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Запази Промените</button>
    </div>
</form>

<div>
    <a asp-controller="Review" asp-action="Index" class="btn btn-secondary">Отказ</a> <!-- Redirect back to the index -->
</div>
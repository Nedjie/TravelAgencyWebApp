@model IEnumerable<TravelAgencyWebApp.Data.Models.Offer>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/styles/bootstrap4/bootstrap.min.css" asp-append-version="true" />
    <link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Admin Dashboard</h2>

        <div class="row mb-3">
            <div class="col">
                <a asp-controller="Offer" asp-action="Create" class="btn btn-primary">Добави Нова Оферта</a>
            </div>
        </div>

        <h3>Управление на Оферти</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Заглавие</th>
                    <th>Описание</th>
                    <th>Цена</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.Title</td>
                        <td>@offer.Description</td>
                        <td>@offer.Price.ToString("C")</td>
                        <td>
                            <a asp-controller="Offer" asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-warning">Редактиране</a>
                            <form asp-controller="Offer" asp-action="Delete" asp-route-id="@offer.Id" method="post" style="display:inline;">
                                <input type="submit" class="btn btn-danger" value="Изтриване" onclick="return confirm('Сигурни ли сте, че искате да изтриете тази оферта?');" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Управление на Потребители</h3>
        <div>
            <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Преглед на Потребители</a>
        </div>

        <h3>Отзиви от Клиенти</h3>
        <div>
            <a asp-controller="Review" asp-action="Index" class="btn btn-secondary">Преглед на Отзиви</a>
        </div>
    </div>

    <!-- Include jQuery and Bootstrap scripts -->
    <script src="~/Content/scripts/jquery.min.js" asp-append-version="true"></script>
    <script src="~/Content/styles/bootstrap4/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>
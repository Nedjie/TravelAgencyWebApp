@model TravelAgencyWebApp.ViewModels.Offer.OfferViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <h2 class="text-center">Детайли за Офертата</h2>

    <div class="row mb-4">
        <div class="col-md-6 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title" style="max-width: 100%; height: auto;" />
            }
            else
            {
                <img src="~/Content/images/default.jpg" class="img-fluid" alt="No image available" style="max-width: 100%; height: auto;" />
            }
        </div>

        <div class="col-md-6">
            <h5>Заглавие: @Model.Title</h5>
            <p><strong>Описание:</strong> @Model.Description</p>
            <p><strong>Цена:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Метод на пътуване:</strong> @Model.TravelingWayMethod</p>

            <div class="mt-3">
                <a asp-controller="Offer" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактиране</a>
                <a asp-controller="Offer" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Изтриване</a>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <div class="text-center">
        <a asp-controller="Offer" asp-action="Index" class="btn btn-secondary">Назад към офертите</a>
    </div>
</div>